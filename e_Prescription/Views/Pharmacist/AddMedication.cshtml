@model e_Prescription.Models.PharmacyMedication

@{
    ViewData["Title"] = "Add Medication";
    Layout = "_Layout2";
}


<div class="row">
    <div class="col-md-10">
        <form asp-action="AddMedication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="MedicationName" class="control-label">Medication Name:</label>
                    <input asp-for="MedicationName" class="form-control" />
                    <span asp-validation-for="MedicationName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">     
                <label asp-for="Schedule" class="control-label">Schedule:</label>
                <select class="form-select">                   
                    <option selected>Select</option>
                    <option value="1">After every 3hrs</option>
                    <option value="2">After every 6hrs</option>
                    <option value="3">After every 9hrs</option>
                    <option value="2">After every 12hrs</option>
                    <span asp-validation-for="Schedule" class="text-danger"></span>
                </select>              
            </div> 
            <div class="form-row">                
                <div class="form-group col-md-4">
                    <label asp-for="DosageFormId" class="control-label">Dosage form</label>
                    <select asp-for="DosageFormId" class="form-control" asp-items="@ViewBag.getDosage">
                        <option selected disabled>--Select dosage form--</option>
                    </select>
                    <span asp-validation-for="DosageFormId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ReorderLevel" class="control-label">ReOrder Level:</label>
                    <input asp-for="ReorderLevel" class="form-control" />
                    <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Done" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

