@model PDispensaryReportViewModel

<h2>Dispensary Report</h2>

<!-- Date Range Selection Form -->
<form method="get" action="@Url.Action("GenerateDispensaryReport", "YourControllerName")">
    <div class="form-group">
        <label for="startDate">Start Date</label>
        <input type="date" id="startDate" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="endDate">End Date</label>
        <input type="date" id="endDate" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>

@* <p><strong>Dorothy Daniels</strong></p> *@
@* <p><strong>Pharmacist:</strong> @Model.PharmacistName</p>
<p><strong>Date Range:</strong> @Model.StartDate.ToString("dd MMMM yyyy") - @Model.EndDate.ToString("dd MMMM yyyy")</p>
<p><strong>Report Generated:</strong> @DateTime.Now.ToString("dd MMMM yyyy")</p> *@

<p><strong>Pharmacist:</strong> @Model.PharmacistName</p>
<p><strong>Date Range:</strong> @Model.StartDate.ToString("dd MMMM yyyy") - @Model.EndDate.ToString("dd MMMM yyyy")</p>
<p><strong>Report Generated:</strong> @DateTime.Now.ToString("dd MMMM yyyy")</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Patient</th>
            <th>Script By</th>
            <th>Medication</th>
            <th>Quantity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prescription in Model.Prescriptions)
        {
            <tr>
                <td>@prescription.Prescription?.Date.ToString("dd MMM yyyy")</td> <!-- Null-safe access -->
                <td>@prescription.Prescription?.Admission?.Patient?.Firstname </td> <!-- Null-safe access -->
                @* <td>@prescription.Prescription?.ApplicationUser?.UserName </td> <!-- Null-safe access --> *@
                <td>Dr.@prescription.Prescription?.ApplicationUser?.FirstName @prescription.Prescription?.ApplicationUser?.LastName </td>
                <td>@prescription.PharmacyMedication?.MedicationName </td> <!-- Null-safe access -->
                <td>@prescription.Quantity</td>
                <td>@prescription.Prescription?.Status </td> <!-- Null-safe access -->
            </tr>
        }
    </tbody>
</table>

<p><strong>Total Scripts Dispensed:</strong> @Model.TotalDispensed</p>
<p><strong>Total Scripts Rejected:</strong> @Model.TotalRejected</p>

<h3>Summary Per Medication:</h3>
<table class="table">
    <thead>
        <tr>
            <th>Medication</th>
            <th>Quantity Dispensed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SummaryPerMedication)
        {
            <tr>
                <td>@item.Medication</td>
                <td>@item.QuantityDispensed</td>
            </tr>
        }
    </tbody>
</table>
