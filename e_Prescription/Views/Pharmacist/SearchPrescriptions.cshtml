@{
    ViewData["Title"] = "Search Report";
}

<div class="col-md-12 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
            <h4 class="text-center">Report Date Range</h4>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <div class="text-center">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form asp-action="SearchPrescriptions" method="get" id="dateRangeForm">
                    <div>
                        <label for="startDate">Start Date:</label>
                        <input type="date" name="startDate" id="startDate" required />
                    </div>
                    <div>
                        <label for="endDate">End Date:</label>
                        <input type="date" name="endDate" id="endDate" required />
                    </div>
                    <button class="btn btn-secondary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>

        
