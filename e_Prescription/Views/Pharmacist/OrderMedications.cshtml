@model List<e_Prescription.Models.MedicationOrderViewModel>

<form asp-action="OrderMedications" asp-controller="Pharmacist" method="post">
    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>Medication Name</th>
                <th>Quantity On Hand</th>
                <th>Reorder Level</th>
                <th>Order Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="model[@i].IsSelected" value="true" />
                        <input type="hidden" name="model[@i].IsSelected" value="false" />
                    </td>
                    <td>@Model[i].MedicationName</td>
                    <td>@Model[i].QuantityOnHand</td>
                    <td>@Model[i].ReorderLevel</td>
                    <td>
                        <input type="number" name="model[@i].OrderQuantity" value="@Model[i].OrderQuantity" />
                    </td>
                    <input type="hidden" name="model[@i].PharmacyMedicationId" value="@Model[i].PharmacyMedicationId" />
                </tr>
            }
        </tbody>
    </table>
    <button type="submit">Place Order</button>
</form>

@{
    ViewData["Title"] = "OrderMedications";
}

<h1>OrderMedications</h1>

