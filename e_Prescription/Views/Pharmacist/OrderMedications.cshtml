@model List<e_Prescription.Models.MedicationOrderViewModel>

<form asp-action="OrderMedications" asp-controller="Pharmacist" method="post">
    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>Medication Name</th>
                <th>Quantity On Hand</th>
                <th>Reorder Level</th>
                <th>Order Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medication in Model)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@medication.IsSelected" /></td>
                    <td>@medication.MedicationName</td>
                    <td>@medication.QuantityOnHand</td>
                    <td>@medication.ReorderLevel</td>
                    <td><input type="number" asp-for="@medication.OrderQuantity" /></td>
                    <input type="hidden" asp-for="@medication.PharmacyMedicationId" />
                </tr>
            }
        </tbody>
    </table>
    <button type="submit">Place Order</button>
</form>

@{
    ViewData["Title"] = "OrderMedications";
}

<h1>OrderMedications</h1>

