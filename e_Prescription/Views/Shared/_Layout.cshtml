@using Microsoft.AspNetCore.Identity
@using e_Prescription.Data
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - e_Prescription</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_Prescription.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.14/css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.14/js/bootstrap-select.min.js"></script>
    <style>
        .navbar-container {
            display: flex;
            height: 100vh; /* Full height */
        }

        .navbar-vertical {
            width: 225px; /* Width of the navbar */
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            gap: 10px;
            overflow-y: auto;
            position: fixed; /* Fix navbar position */
            top: 70px; /* Adjust if the horizontal navbar height changes */
            height: calc(100vh - 70px); /* Full height minus the horizontal navbar height */
            background-color: dimgrey; /* Set background color of the navbar */
        }

        .navbar-item {
            width: 90%;
            text-align: left;
            padding: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
            border-radius: 10px;
            color: #fff; /* Text color (white) */
            text-decoration: none; /* Remove underline from links */
        }

            .navbar-item:hover {
                background-color: #f0f0f0; /* Light gray background on hover */
            }

            .navbar-item.active {
                background-color: #28a745; /* Green background for active tab */
                color: #fff; /* White text color for active tab */
            }

        .content1 {
            margin-left: 225px; /* Leave space for the navbar */
            padding-top: 50px;
            flex-grow: 1;
            border-left: 1px solid #ccc; /* Add a border to separate the content from the navbar */
        }

        .nav-v {
            background-color: dimgrey;
        }

        .nav-vt {
            background-color: dimgrey;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 fixed-top nav-v">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">e_Prescription</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Nurse"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Admission" asp-action="NurseLandingPage">Dashboard</a>
                            </li>
                        }
                    </ul>
                   
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var role = (await UserManager.GetRolesAsync(user))[0];
                            <li class="nav-item">
                                <a class="nav-link text-white">@user.LastName (@role) </a>
                            </li>
                            <li class="nav-item">
                                <form asp-action="Logout" asp-controller="Account" method="post" class="form-inline">
                                    <button type="submit" class="btn btn-link nav-link text-danger">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (User.IsInRole("Admin"))
    {
        <nav class="navbar-container">
            <div class="nav flex-column navbar-vertical nav-vt" role="tablist" aria-orientation="vertical">
                <a class="nav-link navbar-item text-white active" href="@Url.Action("Users", "Admin")">
                    <i class="fas fa-users"></i>
                    Manage Users
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action("ManageVitals", "Admin")">
                    <i class="fas fa-heartbeat"></i>
                    Manage Vitals
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action("ManageWards", "Admin")">
                    <i class="fas fa-bed"></i>
                    Manage Beds
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action("ManageTreatmentCodes", "Admin")">
                    <i class="fas fa-capsules"></i>
                    Treatment Codes
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action("ManageTheatre", "Admin")">
                    <i class="fas fa-theater-masks"></i>
                    Theater Records
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action("ManageActiveIngredient", "Admin")">
                    <i class="fas fa-pills"></i>
                    Active Ingredients
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action("ManageMedication", "Admin")">
                    <i class="fas fa-medkit"></i>
                    Manage Medication
                </a>
            </div>
            <div class="content1">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </nav>
    }
    @if (User.IsInRole("Pharmacist"))
    {
        <nav class="navbar-container">
            <div class="nav flex-column navbar-vertical nav-vt" role="tablist" aria-orientation="vertical">
                <a class="nav-link navbar-item text-white active" href="@Url.Action("GetPrescriptions","Pharmacist")">
                    <i class="fas fa-prescription"></i>
                    Prescriptions
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action()">
                    <i class="fas fa-exclamation"></i>
                    Urgent Prescriptions
                </a>              
                <a class="nav-link navbar-item text-white" href="@Url.Action("Medication","Pharmacist")">
                    <i class="fas fa-pills"></i>
                    Medications
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action()">
                    <i class="fas fa-clipboard"></i>
                    Stock Records
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action()">
                    <i class="fas fa-check"></i>
                    Stock Received
                </a>
                <a class="nav-link navbar-item text-white" href="@Url.Action()">
                    <i class="fas fa-marker"></i>
                    Stock Order
                </a>
            </div>
            <div class="content1">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </nav>
    }


    <div class="container" style="padding-top: 90px;">
        <!-- Adjust padding to prevent content overlap -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Remove 'active' class from all navbar items
            $(".navbar-item").removeClass("active");

            // Determine the current page URL
            var currentPath = window.location.pathname.toLowerCase();

            // Loop through each navbar item
            $(".navbar-item").each(function () {
                // Check if the href attribute matches the current path
                if (this.href.toLowerCase().indexOf(currentPath) !== -1) {
                    // Add 'active' class to the matching navbar item
                    $(this).addClass("active");
                }
            });

            // If no navbar item is active, default to the first item
            // if (!$(".navbar-item").hasClass("active")) {
            //     $(".navbar-item:first").addClass("active");
            // }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
