@model e_Prescription.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}
<head>
    <link href="~/css/logincss.css" rel="stylesheet" />

    <style>
        /* Center the form on the screen */
        .min-vh-100 {
            height: 100vh;
        }

        /* Add soft edges and pop-out effect */
        .card {
            border-radius: 20px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        .input-group-text {
            border-radius: 0 5px 5px 0;
        }

        .btn-block {
            border-radius: 25px;
            padding: 10px 20px;
        }

        /* Additional styling for the logo */
        .img-fluid {
            max-width: 100%;
            height: auto;
            border-radius: 50%;
        }

        /* User icon styling */
        .fas.fa-user {
            color: #28a745; /* Green color to match the header */
        }

    </style>
</head>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg rounded-lg" style="width: 900px; border-radius: 30px;">
        <div class="card-header bg-success text-center text-white" style="height: 45px; border-top-left-radius: 20px; border-top-right-radius: 20px;">
            <h4>Expert Care, Everyday</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Logo on the left -->
                <div class="col-md-6 text-center align-self-center">
                    <img src="~/images/LogoFanil.png" class="img-fluid" alt="Logo" style="max-width: 100%; height: 100%" />
                </div>

                <!-- Login form on the right -->
                <div class="col-md-5">
                    <div class="text-center my-3">
                        <i class="fas fa-user fa-3x"></i> <!-- User icon -->
                    </div>
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-envelope"></i> <!-- Email icon -->
                                    </span>
                                </div>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i> <!-- Password icon -->
                                    </span>
                                </div>
                                <input asp-for="Password" class="form-control" id="myInput" placeholder="Enter your password" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span onclick="togglePasswordVisibility()" style="cursor: pointer;">
                                            <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("myInput");
            var icon = document.getElementById("togglePasswordIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
}
