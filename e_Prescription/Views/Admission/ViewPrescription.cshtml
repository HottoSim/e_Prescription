@model IEnumerable<e_Prescription.Models.PrescriptionItem>

@{
    ViewData["Title"] = "Patient Prescription";

    // Assuming the Model is not null and has at least one item, you can get the admissionId from the first item.
    var admissionId = Model?.FirstOrDefault()?.Prescription?.Admission?.Id;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .form-card {
        border: 5px solid #f5f5f5;
        padding: 10px;
        overflow: hidden;
        background: linear-gradient(to bottom right, #ffffff, #f0f0f0), radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(240,240,240,1) 60%, rgba(230,230,230,1) 100%);
        background-blend-mode: overlay;
        border-radius: 20px;
        box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
    }

    .card {
        background-color: lightgray;
        color: #000;
        border-radius: 15px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #28a745;
        color: #ffffff;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        text-align: center;
        padding: 10px 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-primary,
    .btn-success,
    .btn-info {
        border-radius: 10px;
    }

    .text-danger h1 {
        font-size: 1.5rem;
    }
</style>

<div class="container">
    <div class="form-card">
        <div class="form-group">
            <div class="table-responsive">
                <table class="table table-striped table-sm table-sm-custom">
                    <thead>
                        <tr>
                            <th>Patient ID NO.</th>
                            <th>Medication Name</th>
                            <th>Quantity</th>
                            <th>Instructions</th>
                            <th>Time</th>
                            <th>Surgeon</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Prescription.Admission.Patient.IdNumber</td>
                                    <td>@item.PharmacyMedication.MedicationName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Instruction</td>
                                    <td>@item.Prescription.PresciptionDate.ToShortTimeString()</td>
                                    <td>@item.Prescription.ApplicationUser.FirstName @item.Prescription.ApplicationUser.LastName</td>
                                    <td>
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#administerMedicationModal" data-prescriptionitem-id="@item.PrescriptionItemId" data-admission-id="@admissionId">
                                            Administer Medication
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No Prescription available for this patient</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-info" onclick="history.back()">Go Back</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Administer Medication Modal -->
<div class="modal fade" id="administerMedicationModal" tabindex="-1" aria-labelledby="administerMedicationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="administerMedicationModalLabel">Administer Medication</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="administerMedicationForm" asp-action="AdministerMedication" method="post">
                    <div class="mb-3">
                        <label for="Quantity" class="form-label">Quantity to Administer</label>
                        <input type="number" class="form-control" id="Quantity" name="Quantity" required />
                    </div>
                    <input type="hidden" id="PrescriptionItemId" name="PrescriptionItemId" />
                    <input type="hidden" id="AdmissionId" name="AdmissionId" />
                    <button type="submit" class="btn btn-primary">Administer</button>
                </form>
            </div>
        </div>
    </div>
</div>

@* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script> *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script>
    var administerMedicationModal = document.getElementById('administerMedicationModal');
    administerMedicationModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        var prescriptionItemId = button.getAttribute('data-prescriptionitem-id'); // Extract info from data-* attributes
        var admissionId = button.getAttribute('data-admission-id'); // Extract admissionId
        var modal = $(this);
        modal.find('.modal-body #PrescriptionItemId').val(prescriptionItemId); // Set the hidden input value
        modal.find('.modal-body #AdmissionId').val(admissionId); // Set the hidden input value
    });
</script>
