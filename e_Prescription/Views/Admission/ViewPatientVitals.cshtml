@model IEnumerable<e_Prescription.Models.PatientVital>

@{
   Layout = null;  // This line removes the layout
    ViewData["Title"] = "Patient Vitals";
}

<style>
    .table-sm-custom th, .table-sm-custom td {
        padding: 0.8rem; /* Adjust the padding to make rows smaller */
    }

    .container {
        border: 5px solid #f5f5f5; /* Whitish color */
        /* padding: 10px; */
        overflow: hidden; /* Ensures content doesn't overflow the rounded corners */
        background-color: #f5f5f5;
    }
</style>

<div class="table-responsive container">
    <table class="table table-striped table-sm table-sm-custom">
        <thead>
            <tr>
                <th>Vital Name</th>
                <th>Reading</th>
                <th>Normal Range</th>
                <th>Time</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Vitals.VitalName</td>
                        <td>@item.Reading @item.Vitals.Units</td>
                        <td>@item.Vitals.LowLimit - @item.Vitals.HighLimit @item.Vitals.Units</td>
                        <td>@item.Time.ToShortTimeString()</td>
                        <td>@item.Note</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No vitals found</td>
                </tr>
            }
        </tbody>
    </table>

</div>
