@model e_Prescription.Models.Patient

<style>
    .centered-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        width: 100%;
    }

    .btn-group {
        display: flex;
        justify-content: space-between;
        width: 100%;
        gap: 30px; /* Adjust the gap size as needed */
    }
</style>

<div class="col-md-12  mx-auto pt-0 p-0">
    <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
        <h4 class="text-center">Search existing patient</h4>
    </div>
    <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="col-md-6">
                    <div class="form-group d-flex align-items-center">
                        @* <label for="IdNumber" class="mr-2">ID Number</label> *@
                        <input type="text" name="IdNumber" class="form-control mr-2" placeholder="Enter ID Number" style="flex: 1;" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>

            @if (Model != null)
            {
                <div class="d-flex justify-content-center">
                    <h3>Patient Details</h3>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Gender</th>
                            <th>ID Number</th>
                            <th>Date of Birth</th>
                            <th>Action</th>
                            <!-- Add more columns as needed -->
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Firstname</td>
                            <td>@Model.Lastname</td>
                            <td>@Model.Gender</td>
                            <td>@Model.IdNumber</td>
                            <td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>
                            <form asp-action="BookSurgery" method="get">
                                <input type="hidden" name="patientId" value="@Model.PatientId" />
                                <button type="submit" class="btn btn-primary">Book Surgery</button>
                            </form>
                        </td>
                            <!-- Add more details as needed -->
                        </tr>
                    </tbody>
                </table>
            }

            else if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <p>@ViewBag.Message</p>
            }
    </div>
</div>

