@model IEnumerable<e_Prescription.Models.TreatmentCode>

@{
    ViewData["Title"] = "Manage Treatment Codes";
}

<style>
    .dashboard {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px; /* Add margin to create space between header and dashboard */
    }

    .align-left {
        align-items: flex-end;
        text-align: left;
    }

    .btn1 {
        margin-top: 20px;
        margin-bottom: 5px;
    }

</style>
<div class="col-md-12 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
            <h4 class="text-center">Manage Treatment Codes</h4>
        </div>
        <div class="d-flex justify-content-end btn1">
            <button class="btn btn-primary" onclick="openVitalModal('@Url.Action("AddTreatmentCode", "Admin")')">Create New</button>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Code Name
                    </th>
                    <th>
                        Code Description
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TreatmentCodeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TreatmentCodeDescription)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.TreatmentCodeId">Update</a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" id="VitalModal" tabindex="-1" role="dialog" aria-labelledby="VitalModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title text-center" id="VitalModalLabel">Add New Vital</h5>
                        <button type="button" class="close" onclick="window.location.href='@Url.Action("ManageTreatmentCodes", "Admin")'" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="VitalModalBody">
                        <!-- Content loaded dynamically -->
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function openVitalModal(url) {
            $('#VitalModalBody').load(url, function () {
                $('#VitalModal').modal('show');
            });
        }
    </script>
}

