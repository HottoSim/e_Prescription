@model IEnumerable<e_Prescription.Models.TreatmentCode>

@{
    ViewData["Title"] = "Manage Treatment Codes";
}

<style>
    .dashboard {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px; /* Add margin to create space between header and dashboard */
    }

</style>
<div class="col-md-12 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
            <h4 class="text-center">Manage Treatment Codes</h4>
        </div>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Code Name
                    </th>
                    <th>
                        Code Description
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TreatmentCodeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TreatmentCodeDescription)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TreatmentCodeId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.TreatmentCodeId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.TreatmentCodeId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

