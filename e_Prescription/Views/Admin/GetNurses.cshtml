@model IEnumerable<e_Prescription.Models.Account.Nurse>

@{
    ViewData["Title"] = "Nurses";
}

<style>
    .dashboard {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px; /* Add margin to create space between header and dashboard */
    }

</style>

<div class="col-md-12 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
            <h4 class="text-center">Manage Nurses</h4>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Full Name
                    </th>
                    <th>
                        License Number
                    </th>
                    <th>
                        License Expiry Date
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Status
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName) @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NursingLicenseNumber)
                        </td>
                        <td>
                            @item.LicenseExpiryDate.ToShortDateString()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                        </td>
                        <td>
                            @if (item.ApplicationUser.IsActive)
                            {
                                <text>Active</text>
                            }
                            else
                            {
                                <text>Not Active</text>
                            }
                        </td>
                        <td>
                            <a asp-action="Update" asp-controller="Account" class="btn btn-info" onclick="openUpdateModal('@Url.Action("UpdateUser", "Account")', '@item.ApplicationUser.Id', '@item.ApplicationUser.Role')">Update</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UserId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="updateUserModal" tabindex="-1" role="dialog" aria-labelledby="updateUserModalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title text-center" id="updateUserModalLabel">Update User</h5>
                    <button type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="updateUserModalBody">
                    <!-- Content loaded dynamically -->
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function openUpdateModal(url, userId, role) {
            var fullUrl = url + "?userId=" + encodeURIComponent(userId) + "&role=" + encodeURIComponent(role);
            $('#updateUserModal .modal-body').load(fullUrl, function () {
                $('#updateUserModal').modal('show');
            });
        }
    </script>

}


