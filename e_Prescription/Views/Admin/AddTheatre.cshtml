@model e_Prescription.Models.Theatre

@{
    ViewData["Title"] = "Add Theatre";
    Layout = "_Layout2";
}


<div class="row">
    <div class="col-md-10">
        <form asp-action="AddTheatre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="TheatreName" class="control-label">Theatre name</label>
                    <input asp-for="TheatreName" class="form-control" />
                    <span asp-validation-for="TheatreName" class="text-danger"></span>
                </div>
               @*  <div class="form-group col-md-6">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div> *@
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
