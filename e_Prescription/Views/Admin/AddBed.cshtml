@model e_Prescription.Models.Bed

@{
    ViewData["Title"] = "Add Bed";
    Layout = "_Layout2";
}

<div class="row">
    <div class="col-md-10">
        <form asp-action="AddBed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="BedName" class="control-label">Bed name</label>
                    <input asp-for="BedName" class="form-control" />
                    <span asp-validation-for="BedName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="WardId" class="control-label">Select ward</label>
                    <select asp-for="WardId" class="form-control" asp-items="@ViewBag.getWards">
                        <option selected disabled>--Select ward--</option>
                    </select>
                    <span asp-validation-for="WardId" class="text-danger"></span>
                </div>
            </div>
           @*  <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div> *@
            <div class="d-flex justify-content-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
