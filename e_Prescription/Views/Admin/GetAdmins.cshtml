@model IEnumerable<e_Prescription.Models.Account.Admin>

@{
    ViewData["Title"] = "Administrators";
    //Layout = null;
}

<style>
    .dashboard {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px; /* Add margin to create space between header and dashboard */
    }

</style>

<div class="col-md-12 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
            <h4 class="text-center">Manage Administrators</h4>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Last name
                    </th>
                    <th>
                        Contact
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Status
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                        </td>
                        <td>
                            @if (item.ApplicationUser.IsActive)
                            {
                                <text>Active</text>
                            }
                            else
                            {
                                <text>Not Active</text>
                            }
                        </td>
                        <td>
                            <a asp-action="UpdateUser" asp-controller="Account" asp-route-userId="@item.ApplicationUser.Id" asp-route-role="@item.ApplicationUser.Role" class="btn btn-info"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UserId">
                                <i class="fas fa-user-slash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-info" onclick="history.back()">Go Back</button>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}


