@model e_Prescription.Models.ContraIndication

@{
    ViewData["Title"] = "AddContraIndication";
    Layout = "_Layout2";
}

<div class="row">
    <div class="col-md-10">
        <form asp-action="AddContraIndication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ChronicConditionId" class="control-label">Condition</label>
                    <select asp-for="ChronicConditionId" class="form-control" asp-items="@ViewBag.getCondtions">
                        <option selected disabled>--Select Condition--</option>
                    </select>
                    <span asp-validation-for="ChronicConditionId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ActiveIngredientId" class="control-label">Ingredient</label>
                    <select asp-for="ActiveIngredientId" class="form-control" asp-items="@ViewBag.getIngredients">
                        <option selected disabled>--Select ingredient--</option>
                    </select>
                    <span asp-validation-for="ActiveIngredientId" class="text-danger"></span>
                </div>
                @* <div class="form-group col-md-4">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div> *@
            </div>
           
            <div class="d-flex justify-content-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

