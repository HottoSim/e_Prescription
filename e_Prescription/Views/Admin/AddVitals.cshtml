@model e_Prescription.Models.Vital

@{
    ViewData["Title"] = "Add Vital";
    Layout = "_Layout2";
}

<div class="row">
    <div class="col-md-10">
        <form asp-action="AddVitals">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Dropdown for Limit Type Selection -->
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="LimitType" class="control-label">Limit Type</label>
                    <select id="LimitType" name="LimitType" class="form-control" onchange="toggleLimitFields()">
                        <option value="Normal" selected>Normal Limits</option>
                        <option value="BloodPressure">Blood Pressure Limits</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="VitalName" class="control-label">Vital name</label>
                    <input asp-for="VitalName" class="form-control" />
                    <span asp-validation-for="VitalName" class="text-danger"></span>
                </div>
            </div>
            <div id="normalLimits">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="LowLimit" class="control-label">Low Limit</label>
                        <input asp-for="LowLimit" class="form-control" />
                        <span asp-validation-for="LowLimit" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HighLimit" class="control-label">High Limit</label>
                        <input asp-for="HighLimit" class="form-control" />
                        <span asp-validation-for="HighLimit" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div id="bloodPressureLimits" style="display: none;">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="LowLimit" class="control-label">Systolic Low Limit</label>
                        <input asp-for="LowLimit" class="form-control" />
                        <span asp-validation-for="LowLimit" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HighLimit" class="control-label">Systolic High Limit</label>
                        <input asp-for="HighLimit" class="form-control" />
                        <span asp-validation-for="HighLimit" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="LowLimitDiastolic" class="control-label">Diastolic Low Limit</label>
                        <input asp-for="LowLimitDiastolic" class="form-control" />
                        <span asp-validation-for="LowLimitDiastolic" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HighLimitDiastolic" class="control-label">Diastolic High Limit</label>
                        <input asp-for="HighLimitDiastolic" class="form-control" />
                        <span asp-validation-for="HighLimitDiastolic" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Units" class="control-label">Units</label>
                    <input asp-for="Units" class="form-control" />
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function toggleLimitFields() {
            var limitType = document.getElementById("LimitType").value;
            var normalLimits = document.getElementById("normalLimits");
            var bloodPressureLimits = document.getElementById("bloodPressureLimits");

            if (limitType === "BloodPressure") {
                normalLimits.style.display = "none";
                bloodPressureLimits.style.display = "block";
            } else {
                normalLimits.style.display = "block";
                bloodPressureLimits.style.display = "none";
            }
        }

        // Initialize visibility on page load
        document.addEventListener("DOMContentLoaded", function () {
            toggleLimitFields();
        });
    </script>
}
