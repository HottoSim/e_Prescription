@{
    ViewBag.Title = "Admin Dashboard";
}

<head>
    <style>
        .dashboard-container {
            max-height: 80vh; /* Set a max height for the container */
            overflow-y: auto; /* Enable vertical scrolling */
        }

        .dashboard {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px; /* Add margin to create space between header and dashboard */
        }

        .tile {
            width: 250px;
            height: 150px; /* Increase height to accommodate larger icons */
            background-color: #28a745;
            color: white;
            display: flex;
            flex-direction: column; /* Stack icon and text vertically */
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .tile:hover {
                background-color: #008000;
            }

            .tile img {
                width: 100%; /* Set icon size */
                height: 100%; /* Set icon size */
                margin-bottom: 10px; /* Add space between icon and text */
            }

            .tile h4 {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="col-md-12 mx-auto pt-0 p-0">
        <div class="card">
            <div class="card-header bg-success text-uppercase text-white" style="height: 45px;">
                <h4 class="text-center">Administrator Dashboard</h4>
            </div>
            <div class="dashboard-container">
                <div class="dashboard">
                    <div class="tile" onclick="location.href='@Url.Action("Users", "Admin")'">
                        <img src="images/Users.png" alt="Manage Users Icon">
                        <h4>Manage Users</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("ManageVitals", "Admin")'">
                        <img src="images/Vital signs.jpg" alt="Manage Vitals Icon">
                        <h4>Manage Vitals</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("ManageBeds", "Admin")'">
                        <img src="images/Wards.jpg" alt="Manage Beds Icon">
                        <h4>Manage Wards</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("ManageTreatments", "Admin")'">
                        <img src="images/Treatment.jpeg" alt="Treatment Records Icon">
                        <h4>Treatment Records</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("Theatre", "Admin")'">
                        <img src="images/Theatre.jpg" alt="Reports Icon">
                        <h4>Theatre Records</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("ActiveIngredients", "Admin")'">
                        <img src="images/Active Ingredients.jpg" alt="Manage Inventory Icon">
                        <h4>Active Ingredients</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("Medication", "Admin")'">
                        <img src="images/Medication.jpg" alt="Appointments Icon">
                        <h4>Manage Medication</h4>
                    </div>
                    <div class="tile" onclick="location.href='@Url.Action("DiagnosisRecords(ICD-10)", "Admin")'">
                        <img src="images/icd-10.jpeg" alt="Manage Patients Icon">
                        <h4>Diagnosis (ICD-10)</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
