@model e_Prescription.Models.ViewModels.EmailViewModel

@{
    ViewData["Title"] = "Compose Email";
}

<h2>@ViewData["Title"]</h2>

<!-- Display success or error messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Email form -->
<form asp-action="SendEmail" method="post">
    <div class="form-group">
        <label asp-for="ToEmail">To</label>
        <input asp-for="ToEmail" class="form-control" />
        <span asp-validation-for="ToEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message">Message</label>
        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <!-- Hidden input to pass the admission ID -->
    <input type="hidden" asp-for="AdmissionId" />

    <button type="submit" class="btn btn-primary">Send Email</button>
</form>

@section Scripts {
    <!-- Validation script (if not included globally) -->
    <partial name="_ValidationScriptsPartial" />
}
